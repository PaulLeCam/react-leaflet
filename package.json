{
  "name": "react-leaflet-repository",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "biome check --apply ./packages",
    "lint:ci": "biome ci ./packages",
    "test": "jest",
    "build": "turbo run build:clean && pnpm run -r build:types && turbo run build:js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@skypack/package-check": "^0.2.2",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.24",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.4.0",
    "@types/leaflet": "^1.9.1",
    "@types/warning": "^3.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "leaflet": "^1.9.3",
    "react": "rc",
    "react-dom": "rc",
    "ts-jest-resolver": "^2.0.0",
    "turbo": "^1.8.3",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@rc",
      "@types/react-dom": "npm:types-react-dom@rc",
      "react": "rc",
      "react-dom": "rc"
    }
  },
  "jest": {
    "projects": ["<rootDir>/packages/*"]
  }
}
